@model DDD.WinForm.Models.ViewModel.HomeListViewModel
@{
    ViewData["Title"] = "天気一覧";
}

<div class="text-center">
    <h1 class="display-4">天気一覧</h1>
</div>

<div class="mb-3">
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">詳細検索へ</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>地域ID</th>
                <th>地域名</th>
                <th>日時</th>
                <th>天気</th>
                <th>温度</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var weather in Model.Weathers)
            {
                <tr>
                    <td>@weather.AreaId</td>
                    <td>@weather.AreaName</td>
                    <td>@weather.DataDate</td>
                    <td>@weather.Condition</td>
                    <td>@weather.Temperature</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Weathers.Any())
{
    <div class="alert alert-info" role="alert">
        天気データがありません。
    </div>
}