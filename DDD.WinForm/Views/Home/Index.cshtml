@model DDD.WinForm.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Weather</h1>
</div>

<div class="mb-3">
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="List">一覧表示へ</a>
</div>

<form method="get" action="@Url.Action("Index", "Home")">
    <div>
        <label for="areaId">地域ID</label>
        <select id="areaId" name="areaId" value="@Model.SelectedAreaIdText">
            @foreach (var area in Model.Areas)
            {
                @if (area.AreaId == Convert.ToInt32(Model.SelectedAreaIdText))
                {
                    <option value="@area.AreaId" selected>@area.AreaName</option>
                }
                else
                {
                    <option value="@area.AreaId">@area.AreaName</option>
                }
            }
        </select>
        <button type="submit">検索</button>
    </div>
</form>
<div>
    <div>
        <label for="datetime">日時</label>
        <span id="datetime">@Model.DataDateText</span>
    </div>
    <div>
        <label for="condition">状態</label>
        <span id="condition">@Model.ConditionText</span>
    </div>
    <div>
        <label for="temperature">温度</label>
        <span id="temperature">@Model.TemperatureText</span>
    </div>
</div>

<h2 class="mt-4">新規データ登録</h2>
<form method="post" action="@Url.Action("Save", "Home")">
    <div class="mb-3">
        <label for="saveAreaId">地域ID</label>
        <select id="saveAreaId" name="areaId" class="form-control">
            @foreach (var area in Model.Areas)
            {
                <option value="@area.AreaId">@area.AreaName</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label for="saveDataDate">日時</label>
        <input type="datetime-local" id="saveDataDate" name="dataDate" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="saveCondition">状態</label>
        <select id="saveCondition" name="condition" class="form-control">
            <option value="1">晴れ</option>
            <option value="2">曇り</option>
            <option value="3">雨</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="saveTemperature">温度</label>
        <input type="number" step="0.01" id="saveTemperature" name="temperature" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">保存</button>
</form>