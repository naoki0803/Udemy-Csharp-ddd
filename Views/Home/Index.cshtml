@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Whaher</h1>
</div>

<form method="get" action="@Url.Action("Index", "Home")">
    <div>
        <label for="areaId">地域ID</label>
        <input type="number" id="areaId" name="areaId" value="@Context.Request.Query["areaId"]" />
        <button type="submit">検索</button>
    </div>
</form>
<div>
    <div>
        <label for="datetime">日時</label>
        <span id="datetime">@ViewData["datadate"]</span>
    </div>
    <div>
        <label for="condition">状態</label>
        <span id="condition">@ViewData["condition"]</span>
    </div>
    <div>
        <label for="temperature">湿度</label>
        <span id="temperature">@ViewData["temperature"]</span>
    </div>
</div>